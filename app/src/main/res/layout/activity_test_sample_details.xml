<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TestSampleDetailsActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/text_p_name_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_text_shape"
            android:text="name"
            android:textAlignment="center"
            android:textColor="@color/text_color_default"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_p_name_id"
            android:text="Patient Id :"
            android:textAlignment="center"
            android:textColor="@color/text_color_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_p_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_p_name_id"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/textview1"
            android:text="id"
            android:textAlignment="center"
            android:textColor="@color/text_color_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview1"
            android:text="Lab Id :"
            android:textAlignment="center"
            android:textColor="@color/text_color_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_lab_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview1"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/textview2"
            android:text="Lab Id"
            android:textAlignment="center"
            android:textColor="@color/text_color_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textview3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/textview2"
            android:gravity="center_vertical"
            android:text="Phone No :"

            android:textColor="@color/text_color_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_phone_id"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/textview2"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/textview3"
            android:gravity="center_vertical"
            android:text="029348875"
            android:textColor="@color/text_color_black"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/btn_phone_call"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/text_lab_id"
            android:layout_alignParentEnd="true"
            android:background="@drawable/edit_text_shape"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_phone_24" />

        <TextView
            android:id="@+id/textview4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_phone_call"
            android:layout_marginTop="5dp"
            android:text="Address :"
            android:textAlignment="center"
            android:textColor="@color/text_color_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_addrees_id"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_phone_call"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/textview4"
            android:text="dhaka"
            android:textColor="@color/text_color_black"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/btn_map_id"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/btn_phone_call"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_shape"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_location_on_60" />


        <TextView
            android:id="@+id/textview5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_map_id"
            android:text="Status :"
            android:textAlignment="center"
            android:textColor="@color/text_color_default"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_status_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_map_id"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/textview5"
            android:text="Processing"
            android:textAlignment="center"
            android:textColor="@color/text_color_default"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/textview6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview5"
            android:layout_marginTop="30dp"
            android:text="Test :"
            android:textAlignment="center"
            android:textColor="@color/text_color_black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_test_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview5"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/textview6"
            android:text="x-Ray"
            android:textAlignment="center"
            android:textColor="@color/text_color_black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textview7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview6"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:text="Result:"
            android:textAlignment="center"
            android:textColor="@color/text_color_black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview7">

            <EditText
                android:id="@+id/edit_testresult_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/edit_text_shape"
                android:hint="Type test result"
                android:textColor="@color/text_color_black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_result_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_below="@+id/edit_testresult_id"
                android:gravity="center_vertical"
                android:text="good"
                android:textColor="@color/text_color_black"
                android:textSize="18sp" />

        </FrameLayout>


    </RelativeLayout>

    <Button
        android:id="@+id/btn_sample_collect_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:background="@drawable/submit_button_shape"
        android:text="Done"
        android:textAllCaps="true"
        android:textColor="@color/text_color_white" />


</RelativeLayout>