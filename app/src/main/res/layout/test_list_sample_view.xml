<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp">
        <RelativeLayout
            android:id="@+id/linear_view"
            android:layout_width="match_parent"
           android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patient Id :"
                android:textColor="@color/text_color_default"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/patient_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/textview1"
                android:text="id"
                android:textColor="@color/text_color_default"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/patient_id"
                android:text="Patient Name :"
                android:textColor="@color/text_color_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/patient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/patient_id"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/textview2"
                android:text="name"
                android:textColor="@color/text_color_black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview2"
                android:text="Test Status :"
                android:textColor="@color/text_color_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/test_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview2"
                android:layout_toEndOf="@+id/textview3"
                android:layout_marginLeft="5dp"
                android:text="status"
                android:textColor="@color/text_color_black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_details_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview3"
                android:backgroundTint="@color/text_color_green"
                android:text="Details"
                android:textAllCaps="false"
                android:textColor="@color/text_color_white"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/btn_delete_Id"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/app_background_white"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_delete_40" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>